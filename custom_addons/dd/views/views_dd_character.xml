<odoo>

    <record id="form_dd_character" model="ir.ui.view">
        <field name="name">dd.character.form</field>
        <field name="model">dd.character</field>
        <field name="arch" type="xml">
            <form string="Personagem">
                <sheet>
                    <group>
                        <field name="character_name"/>
                        <field name="character_level"/>
                        <field name="character_stamina"/>
                        <field name="character_class_id"/>
                    </group>
                    <notebook>
                        <page string="Atributos">
                            <field name="character_attribute_ids" widget="many2many"
                                   options="{'create': True, 'create_edit': True}">
                                <tree editable="bottom">
                                    <field name="attribute_name"/>
                                    <field name="attribute_description"/>
                                    <field name="attribute_value"/>
                                    <field name="attribute_modifier"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tree_dd_character" model="ir.ui.view">
        <field name="name">dd.character.tree</field>
        <field name="model">dd.character</field>
        <field name="arch" type="xml">
            <tree string="Personagens">
                <field name="character_name"/>
                <field name="character_level"/>
                <field name="character_stamina"/>
                <field name="character_class_id"/>
            </tree>
        </field>
    </record>

</odoo>